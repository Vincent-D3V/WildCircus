{% extends "base.html.twig" %}

{% block body %}
    <img src="https://www.royalcanadiancircus.ca/wp-content/uploads/2015/01/ticket_stub.png" alt="buyTicket" style="display: block; margin-left: auto; margin-right: auto; width: 300px; height: 150px; margin-bottom: 100px; margin-top: 100px;">
    <div style="background-color: #1d2124">
        {% for category, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ category }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <h6 style="text-align: center">Numéro présentez lors du spectacle: {{ performances.name }}</h6>
        {{ form_start(ticketForm) }}
        {{ form_errors(ticketForm) }}
        {{ form_row(ticketForm.firstName) }}
        {{ form_row(ticketForm.lastName) }}
        {{ form_row(ticketForm.email) }}
        {{ form_row(ticketForm.age1) }}
        {{ form_row(ticketForm.age2) }}
        {{ form_row(ticketForm.age3) }}
        {{ form_row(ticketForm.showPlace) }}
        {{ form_row(ticketForm.showDate) }}
    </div>
    <div style="display: flex; justify-content: center;">
        <button class="btn btn-success" type="submit">Envoyé</button>
    </div>
    {{ form_end(ticketForm) }}
{% endblock %}
